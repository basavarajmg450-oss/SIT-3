{
  "info": {
    "name": "PlacementPro API",
    "description": "PlacementPro Backend API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"student1@college.edu\",\n  \"password\": \"Password123\",\n  \"role\": \"student\",\n  \"name\": \"Test Student\"\n}"},
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"student1@college.edu\",\n  \"password\": \"Password123\",\n  \"role\": \"student\"\n}"},
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"student1@college.edu\",\n  \"role\": \"student\"\n}"},
            "url": "{{baseUrl}}/auth/forgot-password"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"token\": \"<token-from-email>\",\n  \"email\": \"student1@college.edu\",\n  \"role\": \"student\",\n  \"password\": \"NewPassword123\"\n}"},
            "url": "{{baseUrl}}/auth/reset-password"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Student",
      "item": [
        {"name": "Get Profile", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/student/profile"}},
        {"name": "Get Eligible Drives", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/student/eligible-drives"}},
        {"name": "Get Applications", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/student/applications"}}
      ]
    },
    {
      "name": "TPO",
      "item": [
        {"name": "Get Drives", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/tpo/drives"}},
        {"name": "Get Analytics", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": "{{baseUrl}}/tpo/analytics"}}
      ]
    },
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "http://localhost:5000/health"
      }
    }
  ]
}
